<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_dialog_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:padding="12dp"    
    >

	<LinearLayout 
	    android:id="@+id/custom_dialog_root_bglinear"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:background="@drawable/dialog_bg"
	    >
	    <LinearLayout
	        android:id="@+id/custom_dialog_title_linear"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
		    android:orientation="vertical" 		    
		    >
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:padding="20dp" 
			    android:gravity="center_vertical|left"
			    >
			    <ImageView 
			        android:id="@+id/custom_dialog_icon"
			        android:layout_width="20dp"
			        android:layout_height="20dp"
			        android:scaleType="fitCenter"

			        android:layout_marginRight="5dp"
			        android:visibility="gone"
			        />
			    <TextView 
			        android:id="@+id/custom_dialog_title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:singleLine="false"
			        android:textSize="@dimen/talk_dialog_title_size"
			        android:textColor="@color/talk_dialog_title_color"			       			        
			        android:text="确认手机号"        
			        />
		     </LinearLayout>
		     <View 
		        android:layout_width="fill_parent"
		        android:layout_height="2px" 
		        android:background="@color/talk_dialog_title_color"        
		        />
	    </LinearLayout>
	
	    <LinearLayout
	        android:id="@+id/custom_dialog_content_linear"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
		    android:orientation="vertical" 
		    
		    android:gravity="center_vertical|left"
		    >		     
		    <TextView 
		        android:id="@+id/custom_dialog_content"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:singleLine="false"
		        android:textSize="@dimen/talk_dialog_content_size"
		        android:textColor="@color/talk_dialog_content_color"		        		        
		        android:text="确认手机号确认手机号确认手机号确认手机号确认手机号确认手机号确认手机号确认手机号确认手机号确认手机号确认手机号确认手机号"     
		        android:padding="20dp"   		        
		        android:lineSpacingExtra="@dimen/textview_line_spacing"
		        />
		    <ListView 
		        android:id="@+id/custom_dialog_content_listview"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:cacheColorHint="@color/transparent"
		        android:divider="@drawable/line"
		        android:dividerHeight="1px"
		        android:listSelector="@drawable/item_selector"
		        android:scrollbarThumbVertical="@drawable/wb_scrollbar"
		        android:visibility="gone"
		        />
	     </LinearLayout>
	     <LinearLayout
	        android:id="@+id/custom_dialog_button_linear"
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    >
		     <View 
		        android:layout_width="fill_parent"
		        android:layout_height="2px" 
		        android:background="@color/talk_text_gray"        
		        />
		    <LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="48dp"
			    android:gravity="center"
			    android:orientation="horizontal"
			    >
		
			    <Button
			        android:id="@+id/custom_dialog_cancelbtn"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:background="@drawable/custom_dialog_button_selector"
			        android:text="@string/cancel"
			        android:textColor="@color/talk_dialog_content_color"
			        android:textSize="@dimen/talk_dialog_button_size" 
			        android:layout_weight="1"
			        />
			      <View 
			        android:id="@+id/custom_dialog_btnline"
			        android:layout_width="1px"
			        android:layout_height="fill_parent" 
			        android:background="@color/talk_text_gray"       
			        />
			    <Button
			        android:id="@+id/custom_dialog_okbtn"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:background="@drawable/custom_dialog_button_selector"
			        android:text="@string/ok"
			        android:textColor="@color/talk_dialog_content_color"
			        android:textSize="@dimen/talk_dialog_button_size"
			        android:layout_weight="1"
			        />
		
			</LinearLayout>
		</LinearLayout>	
	</LinearLayout>
</LinearLayout>